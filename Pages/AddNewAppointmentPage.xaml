<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppointmentSimulator.Pages.AddNewAppointmentPage"
             Title="Agregar Nueva Cita">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Nombre del Alumno" FontAttributes="Bold" />
            <Entry Text="{Binding Name}" Placeholder="Ingresa el nombre"/>

            <Label Text="Asunto" FontAttributes="Bold" />
            <Entry Text="{Binding Subject}" Placeholder="Ingresa el asunto"/>

            <Label Text="Fecha de la cita" FontAttributes="Bold" />
            <DatePicker Date="{Binding AppointmentDateTime}" />

            <Label Text="Hora de inicio" FontAttributes="Bold" />
            <TimePicker Time="{Binding StartingTime}" />

            <Label Text="Hora de tÃ©rmino" FontAttributes="Bold" />
            <TimePicker Time="{Binding EndingTime}" />

            <Button Text="Guardar Cita" Command="{Binding AddAppointmentCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>